<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:padding="18dp"
    tools:context="com.prointer.halle.MainActivity">


    <ImageView
        android:id="@+id/img_logo_login"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo" />

    <LinearLayout
        android:id="@+id/layout_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo_login"
        android:layout_marginTop="31dp"
        android:background="@drawable/custom_background_login"
        android:elevation="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/azurcolor"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:text="@string/login_str"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/campo_login_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/layout_login_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:hint="@string/login_edt_usuario_str"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:textColorHint="@color/greyTextColor" />

    </LinearLayout>

    <TextView
        android:id="@+id/titulo_login_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_login_id"
        android:layout_marginTop="13dp"
        android:background="@color/azurcolor"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="@string/Senha"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/campo_login_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:hint="@string/senha_edt_usuario_str"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:textColorHint="@color/greyTextColor" />

    <Button
        android:id="@+id/button_salvar"
        android:layout_width="750px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campo_login_senha"
        android:layout_marginTop="51dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/Botao_Entrar"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_cadastrar"
        android:layout_width="280px"
        android:layout_height="100px"
        android:layout_alignLeft="@+id/img_logo_login"
        android:layout_alignStart="@+id/img_logo_login"
        android:layout_below="@+id/button_salvar"
        android:layout_marginTop="31dp"
        android:text="@string/Botao_cadastrar" />
</RelativeLayout>
